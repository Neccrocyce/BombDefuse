<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bs_btn_go">

        <ImageView
            android:id="@+id/bs_qr_code"
            style="@style/qr_code"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/bs_dscr_qr_code" />

    </FrameLayout>

    <Button
        android:id="@+id/bs_btn_go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/bs_btn_go"
        android:layout_alignParentBottom="true"
        android:onClick="gotoBombReady"
        style="@style/textfield_default"/>

</RelativeLayout>